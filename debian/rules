#!/usr/bin/make -f
# debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.
# GNU Copyright 2002-2004 by David Martínez Moreno.

# Do you want verbosity...? Uncomment this.
#export DH_VERBOSE=1

export LC_ALL=C

# We have to honor DEB_BUILD...
ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
CONFIGURE_FLAGS += --enable-profile
endif

DEB_BUILD_GNU_CPU ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_CPU)

export CFLAGS

build: 
	dh_testdir
	$(MAKE)

clean: 
	dh_testdir
	dh_testroot

	$(MAKE) clean

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	if [ -d .svn ]; then \
		svn export scripts $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/scripts  --force; \
		svn export maps $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/maps  --force; \
	else \
		cp -r scripts $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/scripts; \
		cp -r maps $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/maps; \
	fi

	find $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/maps -name "*.pud" -print | xargs rm
	install -m0755 pudconvert $(CURDIR)/debian/wargus/usr/games
	install -m0755 wartool $(CURDIR)/debian/wargus/usr/games
	install -m0755 build.sh $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus
	install -m0755 debian/wrapper $(CURDIR)/debian/wargus/usr/games/wargus
	install -m0644 contrib/wargus.png $(CURDIR)/debian/wargus/usr/share/pixmaps
	install -m0644 debian/wargus.desktop $(CURDIR)/debian/wargus/usr/share/applications

	install -m0644 contrib/cross.png $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/graphics/ui/cursors
	install -m0644 contrib/red_cross.png $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/graphics/missiles
	install -m0644 contrib/mana.png $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/graphics/ui
	install -m0644 contrib/mana2.png $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/graphics/ui
	install -m0644 contrib/health.png $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/graphics/ui
	install -m0644 contrib/health2.png $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/graphics/ui
	install -m0644 contrib/food.png $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/graphics/ui
	install -m0644 contrib/score.png $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/graphics/ui
	install -m0644 contrib/ore,stone,coal.png $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/graphics/ui

	install -m0644 contrib/toccata.mod.gz $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/music/default.mod.gz

# Build architecture-independent files here.
binary-indep: build install

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdebconf
	dh_installdocs
	dh_installmenu
	dh_installman
	dh_desktop
	dh_installchangelogs
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	
	# Maemo section - Optify
	if test "`uname -a | grep -is arm`" && test -f /etc/maemo_version; then \
		mkdir -p $(CURDIR)/debian/wargus/usr/share/dbus-1/services; \
		mkdir -p $(CURDIR)/debian/wargus/usr/share/applications/hildon; \
		install -m0644 debian/com.nokia.wargus.service $(CURDIR)/debian/wargus/usr/share/dbus-1/services/; \
		mv $(CURDIR)/debian/wargus/usr/share/applications/wargus.desktop $(CURDIR)/debian/wargus/usr/share/applications/hildon/; \
		mkdir -p $(CURDIR)/debian/wargus/opt/stratagus/bin; \
		mkdir -p $(CURDIR)/debian/wargus/opt/stratagus/share; \
		mkdir -p $(CURDIR)/debian/wargus/opt/stratagus/share/doc; \
		mkdir -p $(CURDIR)/debian/wargus/opt/stratagus/share/man; \
		mv $(CURDIR)/debian/wargus/usr/games/* $(CURDIR)/debian/wargus/opt/stratagus/bin/; \
		mv $(CURDIR)/debian/wargus/usr/share/doc/wargus $(CURDIR)/debian/wargus/opt/stratagus/share/doc/; \
		mv $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus $(CURDIR)/debian/wargus/opt/stratagus/share/; \
		mv $(CURDIR)/debian/wargus/usr/share/man/man6/* $(CURDIR)/debian/wargus/opt/stratagus/share/man/; \
		ln -s /opt/stratagus/bin/wartool $(CURDIR)/debian/wargus/usr/games/wartool; \
		ln -s /opt/stratagus/bin/wargus $(CURDIR)/debian/wargus/usr/games/wargus; \
		ln -s /opt/stratagus/bin/pudconvert $(CURDIR)/debian/wargus/usr/games/pudconvert; \
		ln -s /opt/stratagus/share/wargus $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus; \
		ln -s /opt/stratagus/share/doc/wargus $(CURDIR)/debian/wargus/usr/share/doc/wargus; \
		ln -s /opt/stratagus/share/man/wargus.6.gz $(CURDIR)/debian/wargus/usr/share/man/man6/wargus.6.gz; \
		ln -s /opt/stratagus/share/man/wartool.6.gz $(CURDIR)/debian/wargus/usr/share/man/man6/wartool.6.gz; \
		ln -s /opt/stratagus/share/man/pudconvert.6.gz $(CURDIR)/debian/wargus/usr/share/man/man6/pudconvert.6.gz; \
	fi

	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install

