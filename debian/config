#!/bin/sh

set -e

# Source debconf library
. /usr/share/debconf/confmodule
db_version 2.0
db_capb backup

if [ "$1" != "configure" ] && [ "$1" != "reconfigure" ]; then
	exit 0;
fi

if [ "$1" = "configure" ] && [ -f /usr/share/games/stratagus/wargus/extracted ] && wartool -V 1>/dev/null 2>&1; then

	HAS_VERSION="$(cat /usr/share/games/stratagus/wargus/extracted 2>/dev/null)"
	NEW_VERSION="$(wartool -V 2>/dev/null)"

	if [ "$HAS_VERSION" = "$NEW_VERSION" ]; then
		db_set wargus/extractdata "false" || true
		db_stop || true
		exit 0
	fi

fi

db_reset wargus/extractdata || true
db_fset wargus/extractdata seen false || true
db_fset wargus/cdpath seen false || true
db_fset wargus/expcdpath seen false || true
db_fset wargus/music seen false || true
db_fset wargus/videos seen false || true
db_fset wargus/tracks seen false || true

while true; do
	db_beginblock || true
	db_input critical wargus/extractdata || true
	db_endblock || true
	db_go || exit 10

	db_get wargus/extractdata || true

	if [ "X$RET" = "X" ]; then break; fi # none selected, we just skip everything
	foundBasic="false"
	foundExtensionPack="true"
	echo "$RET" | grep Portal && { EXTRACT_EXTPACK=1; foundExtensionPack="false"; }
	echo "$RET" | grep music &&  { MUSIC=1; }
	echo "$RET" | grep videos && { VIDEOS=1; }
	echo "$RET" | grep tracks && { TRACKS=1; }

	if [ "X$MUSIC" = "X1" ]; then db_set wargus/music 1 || true; fi
	if [ "X$VIDEOS" = "X1" ]; then db_set wargus/videos 1 || true; fi
	if [ "X$TRACKS" = "X1" ]; then db_set wargus/tracks 1 || true; fi

	db_beginblock || true
	db_input critical wargus/cdpath || true
	db_endblock || true
	db_go || continue

	db_beginblock || true
	if [ "X$EXTRACT_EXTPACK" = "X1" ]; then
		db_input critical wargus/expcdpath || true
	fi
	db_endblock || true
	db_go || continue

	db_get wargus/cdpath || true
	for CDPATH in "$RET" "$RET/data" "$RET/DATA"; do
		if [ -f "$CDPATH/rezdat.war" ] || [ -f "$CDPATH/REZDAT.WAR" ] || [ -f "$CDPATH/War Resources" ] || [ -f "$CDPATH/SUPPORT/TOMES/TOME.1" ]; then
			db_set wargus/cdpath $CDPATH || true
			foundBasic="true"
			break
		fi
	done

	db_get wargus/expcdpath || true
	for CDPATH in "$RET" "$RET/data" "$RET/DATA"; do
		if [ -f "$CDPATH/rezdat.war" ] || [ -f "$CDPATH/REZDAT.WAR" ] || [ -f "$CDPATH/War Resources" ] || [ -f "$CDPATH/SUPPORT/TOMES/TOME.1" ]; then
			db_set wargus/expcdpath $CDPATH || true
			foundExtensionPack="true"
			break
		fi
	done

	if [ "X$foundBasic" = "Xtrue" ] && [ "X$foundExtensionPack" = "Xtrue" ]; then
		break
	fi

	db_beginblock || true
	if [ "X$foundBasic" = "Xfalse" ]; then 
		db_input critical wargus/nodataBasic || true
	fi
	if [ "X$foundExtensionPack" = "Xfalse" ]; then 
		db_input critical wargus/nodataExtensionPack || true
	fi
	db_endblock || true
	db_go || continue
done

db_stop || true
