#!/bin/sh

set -e

# Maemo section
if [ "`uname -a | grep -is arm`" ] && [ -f /etc/maemo_version ]; then
	echo "To completly remove wargus data, remove dir:"
	echo "/home/user/MyDocs/stratagus/wargus"
	exit 0
fi

case "$1" in 
    abort-install|remove)
        # also remove the extracted warcraft 2 data files
        rm -rf /usr/share/games/stratagus/wargus
    ;;
    *)
#        echo "postrm called with unknown argument \`$1'" >&2
#        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

