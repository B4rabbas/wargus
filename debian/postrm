#!/bin/sh

set -e

# Maemo section
if [ -f /etc/maemo_version ]; then
	if [ "$1" != "remove" ] || [ "$1" != "abort-install" ]; then
		exit 0
	fi

	echo
	echo "To completly remove wargus data, remove dir:"
	echo "/opt/stratagus/share/wargus"
	echo

	exit 0
fi

case "$1" in 
    abort-install|remove)
        # also remove the extracted warcraft 2 data files
        rm -rf /usr/share/games/stratagus/wargus
    ;;
    *)
#        echo "postrm called with unknown argument \`$1'" >&2
#        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

