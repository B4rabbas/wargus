{
    "configurations": [
        {
            "name": "Wartool",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/wartool.exe",
            "args": ["-v", "${input:datadir}", "${env:APPDATA}\\Stratagus\\data.Wargus"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [{"name": "PATH", "value": "${workspaceFolder}\\..\\dependencies\\bin;${env:PATH}"}],
            "externalConsole": true
        }
    ],
    "inputs": [
        {
          "type": "promptString",
          "id": "datadir",
          "description": "Enter path to DATA folder"
        },
    ]
}
